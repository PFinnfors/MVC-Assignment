@model MVCAssignment.Models.People

@{
    ViewBag.Title = "People";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>People</h2>

@using (Html.BeginForm(controllerName: "Features", actionName: "People", method: FormMethod.Get))
{
    @Html.DisplayNameFor(m => m.SearchString)
    <br />

    Model.caseSensitive = Convert.ToBoolean(Session["caseSensitive"]);

    @Html.EditorFor(m => m.caseSensitive)
    <br />
    <input id="SearchString" name="SearchString" type="search" placeholder="filter">
    <input type="submit" />
}

<br />

@* blabla *@
<table border="1">
    @{
        <tr>
            <td>Name</td>

            <td>Phone Number</td>

            <td>City</td>

            <td></td>

        </tr>

            for (int r = 0; r < Model.ViewList.Count; r++)
            {
            <tr>
                @for (int d = 0; d < Model.ViewList[r].Count; d++)
                {
                    <td>
                        @Html.DisplayFor(m => m.ViewList[r][d])
                    </td>
                }
                <td>Remove</td>
            </tr>
        }
    }
</table>



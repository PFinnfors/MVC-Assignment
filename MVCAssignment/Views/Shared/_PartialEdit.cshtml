@model MVCAssignment.Models.People
<div id="pEdit">
    <style>
        span {
            width: 200px;
        }
    </style>

    <div style="background-color:lightslategray; border-bottom:1px solid black">


        <div style="display:inline">
            @* For each property (division) in the current row of PeopleData *@
            @for (int d = 0; d < MVCAssignment.Models.People.
                PeopleData[Convert.ToInt16(Model.customVDD["RowId"])].Count; d++)
            {
                <div style="display:inline-block; width:200px">
                    @* Type out the property in the current section *@
                    @MVCAssignment.Models.People.PeopleData[Convert.ToInt16(Model.customVDD["RowId"])][d]
                </div>
            }

        </div>
    </div>
    <div>
        @using (Ajax.BeginForm(ajaxOptions: new AjaxOptions
        {
            //AJAX specifications
            HttpMethod = "POST",
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "pEdit"

        }, controllerName: "Features", actionName: "_PartialItem", routeValues: Model.customVDD))
        {

            @Html.LabelFor(m => m.AddName)
            <span> </span>
            @Html.EditorFor(m => m.AddName)

            @Html.LabelFor(m => m.AddPhone)
            <span> </span>
            @Html.EditorFor(m => m.AddPhone)

            @Html.LabelFor(m => m.AddCity)
            <span> </span>
            @Html.EditorFor(m => m.AddCity)

            <input type="submit" value="submit" />

        }

        @*@Ajax.ActionLink(linkText: "delete", actionName: "")*@
    </div>

    <br />
</div>


